<div class="login-container">
  <header>
    <%= link_to root_path do %>
      <%= fa_icon "arrow-left" %> 
    <% end %>
    <h2>LOGIN</h2>
    <button type="submit" form="login_form" class="header-login">Log In</button> 
  </header>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login_form" }) do |f| %> <!-- AÃ±ade un id al formulario -->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  <% end %>
  
  <div class="forgot-password">
    <%= link_to "Forgot password?", new_password_path(resource_name) %>
  </div>
</div>
