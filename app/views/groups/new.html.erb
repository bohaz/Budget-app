<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<div class="login-container">
<header>
<%= link_to groups_path do %>
  <%= fa_icon "arrow-left" %> 
<% end %>
<h2>TRANSACTIONS</h2>
</header>

<%= form_for(@group) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Category Name" %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :icon, "Choose an Icon" %>
    <%= f.select :icon, options_for_select([
      ['Car', 'fas fa-car'],
      ['Bicycle', 'fas fa-bicycle'],
      ['Bus', 'fas fa-bus'],
      ['Train', 'fas fa-train'],
      ['Plane', 'fas fa-plane'],
      ['Ship', 'fas fa-ship'],
      ['Motorcycle', 'fas fa-motorcycle'],
      ['Taxi', 'fas fa-taxi'],
      ['Truck', 'fas fa-truck'],
      ['Subway', 'fas fa-subway'],
      ['Tram', 'fas fa-tram'],
      ['Walking', 'fas fa-walking'],
    ]), {}, class: 'form-control' %>
  </div>

  <%= f.submit "Add Category", class: 'btn btn-primary' %>
<% end %>

</div>

